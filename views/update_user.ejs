  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> Tüm Kullanıcılar</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Kullanıcı Güncelleme</h2>
            <span class="text-light">Formu kullanarak kullanıcıyı düzenleyin</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="userName" class="text-light">Kullanıcı Adı</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="userName" value="<%= user.userName %>" placeholder="ali.veli">
        </div>
        <div class="form-group">
            <label for="password" class="text-light">Şifre</label>
            <input type="text" name="password" value="<%= user.password%>" placeholder="alican321">
        </div>
		<div class="form-group">
            <label for="yurt" class="text-light">Yurt</label>
            <input type="text" name="yurt" value="<%= user.yurt%>" placeholder="Kartaltepe">
        </div>
        

       

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
